@model IEnumerable<Northwind.Data.Domain.Model.Category>

@{
    ViewData["Title"] = "Categories";
}
<div>
    @await Component.InvokeAsync("Breadcrumbs", new { context = Context })
</div>
<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a northwind-id="@item.CategoryId">CategoryImage_@item.CategoryId</a>
                </td>
                <td>
                    @Html.ActionLink("Upload image", "UploadImage", new { categoryId = item.CategoryId }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Footer {
    <span style="color:gold">&#9888;</span>
    <span style="color:gold">You can’t edit categories</span>
}
