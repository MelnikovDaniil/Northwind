@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <hr style="height:1px;border-width:0;color:green;background-color:green">

        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-success">Logout</button>
        </form>
    </li>
}
else
{
<li class="nav-item">
    <hr style="height:1px;border-width:0;color:green;background-color:green">

    <a class="btn btn-success" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    <a class="btn btn-outline-success" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
</li>
}
</ul>
